@model FineBlog.ViewModels.BlogPostVM

@{
    ViewData["Title"] = "Post";
    string thumbnailUrl = Model.ThumbnailUrl != null
        ? "/thumbnails/" + Model.ThumbnailUrl
        : "/blog/assets/img/home-bg.jpg";

    bool isAdmin = User.IsInRole("Admin");
}

<header class="masthead" style="background-image: url('@thumbnailUrl')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading">@Model.ShortDescription</h2>
                    <span class="meta">
                        Posted by <a href="#!">@Model.AuthorName</a> on @Model.CreatedDate.ToShortDateString()
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                @Html.Raw(Model.Description)

                <!-- Tags Section -->
                <div class="tags-section mt-5">
                    <h4>Tags</h4>
                    <div class="tag-list">
                        @foreach (var tag in Model.Tags)
                        {
                            <a asp-controller="Blog" asp-action="Index" asp-route-tag="@tag.Name"
                               class="badge bg-secondary text-white text-decoration-none">@tag.Name</a>
                        }
                    </div>
                </div>

                <div class="comments-section mt-5">
                    <h4>Comments (@(Model.Comments?.Count() ?? 0))</h4>

                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="comment mb-3">
                                <div class="comment-author">
                                    <strong>@comment.AuthorName</strong>
                                    <small class="text-muted">@comment.CreatedAt.ToString("MMMM dd, yyyy")</small>
                                </div>
                                <div class="comment-content">
                                    @comment.Content
                                </div>

                                @if (isAdmin || User.Identity.Name == comment.AuthorName)
                                {
                                    <form asp-controller="Comment" asp-action="Delete" method="post" class="mt-2">
                                        <input type="hidden" name="CommentId" value="@comment.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p>No comments yet. Be the first to comment!</p>
                    }
                </div>


                <!-- Add Comment Form -->
                <div class="add-comment mt-5">
                    <h4>Leave a Comment</h4>
                    <form asp-controller="Comment" asp-action="Create" method="post">
                        <input type="hidden" name="PostId" value="@Model.Id">

                        <div class="form-group mb-3">
                            <label for="AuthorName">Name</label>
                            <input type="text" class="form-control" name="AuthorName" value="@User.Identity.Name" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="AuthorEmail">Email</label>
                            <input type="email" class="form-control" name="AuthorEmail" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Content">Comment</label>
                            <textarea class="form-control" name="Content" rows="3" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</article>
